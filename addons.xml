<?xml version="1.0" encoding="UTF-8" ?>
<addons>
  <addon id="plugin.audio.vietmedia.music"
       name="VietMedia Music"
       version="1.0.2"
       provider-name="VietMedia">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.simple.downloader" version="1.9.4" />
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <language>en</language>
        <summary lang="en">VietMedia Music online</summary>
        <description lang="en">Add-on play Music online</description>
    </extension>
  </addon>

